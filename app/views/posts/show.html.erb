<div class="mt-6 max-w-2xl mx-auto px-4 sm:px-6">
    <div  class="flex justify-center mb-4">
        <h2 class="text-2xl font-extrabold text-gray-900"><%= @post.title %></h2>
    </div>
    <h2 class="text-xl font-bold text-gray-700"><%= @post.body %></h2>
    <div class="flex mt-4">
      <p class="text-xl font-extrabold text-gray-900 flex-1 justify-left"> Category:
        <%= link_to @post.category.title,  category_path(@post.category.slug), class:"text-orange-600" %> </p>
      <p class="text-xl font-extrabold text-gray-900 flex-1 justify-right"><%= @post.created_at %></p>

    </div>
</div>


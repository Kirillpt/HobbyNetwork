<div class="flex mt-6 max-w-7xl mx-auto px-4 sm:px-6">
  <div class="flex-1 text-left">
      <div class="grid grid-cols-1">
    <h2 class="text-3xl font-extrabold text-green-700">Posts: </h2>
      <%= render partial: "posts/post", collection: @category.posts %>
    </ul>
  </div>
  </div>

<div class="ml-2">
  <%= link_to "Edit Category", edit_category_path(@category.slug), class:"whitespace-nowrap inline-flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-orange-600 hover:bg-orange-700"%>
  <%= link_to "Remove Category", category_path(@category.slug), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"whitespace-nowrap inline-flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-orange-700 hover:bg-orange-900"%>
  <%= link_to "Add Post", new_post_path, class:"whitespace-nowrap inline-flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-orange-700 hover:bg-orange-900"%>
</div>
</div>
